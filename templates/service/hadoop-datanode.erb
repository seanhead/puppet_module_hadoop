# Starts a Hadoop datanode
# 
# chkconfig: 2345 90 10
# description: Hadoop datanode

source /etc/rc.d/init.d/functions

RETVAL=0
desc="Hadoop datanode daemon"

start() {
  echo -n $"Starting $desc (hadoop-datanode): "
  daemon --user <%= scope.lookupvar('hadoop::vars::user') %> <%= scope.lookupvar('hadoop::vars::home') %>/bin/hadoop-daemon.sh --config "<%= scope.lookupvar('hadoop::vars::home') %>/conf" start datanode
  RETVAL=$?
  echo
  [ $RETVAL -eq 0 ] && touch /var/lock/subsys/hadoop-datanode
  return $RETVAL
}

stop() {
  echo -n $"Stopping $desc (hadoop-datanode): "
  daemon --user  <%= scope.lookupvar('hadoop::vars::user') %> <%= scope.lookupvar('hadoop::vars::home') %>/bin/hadoop-daemon.sh --config "<%= scope.lookupvar('hadoop::vars::home') %>/conf" stop datanode
  RETVAL=$?
  sleep 5
  echo
  [ $RETVAL -eq 0 ] && rm -f /var/lock/subsys/hadoop-datanode
}

restart() {
  stop
  start
}

condrestart(){
  [ -e /var/lock/subsys/hadoop-datanode ] && restart || :
}

case "$1" in
  start)
    start
    ;;
  stop)
    stop
    ;;
  restart)
    restart
    ;;
  condrestart|try-restart)
    condrestart
    ;;
  *)
    echo $"Usage: $0 {start|stop|restart|try-restart}"
    exit 1
esac

exit $RETVAL
