# Starts a Hadoop tasktracker
# 
# chkconfig: 2345 90 10
# description: Hadoop tasktracker

source /etc/rc.d/init.d/functions

RETVAL=0
desc="Hadoop tasktracker daemon"

start() {
  echo -n $"Starting $desc (hadoop-tasktracker): "
  daemon --user <%= scope.lookupvar('hadoop::vars::user') %> <%= scope.lookupvar('hadoop::vars::home') %>/bin/hadoop-daemon.sh --config "<%= scope.lookupvar('hadoop::vars::home') %>/conf" start tasktracker
  RETVAL=$?
  echo
  [ $RETVAL -eq 0 ] && touch /var/lock/subsys/hadoop-tasktracker
  return $RETVAL
}

stop() {
  echo -n $"Stopping $desc (hadoop-tasktracker): "
  daemon --user <%= scope.lookupvar('hadoop::vars::user') %> <%= scope.lookupvar('hadoop::vars::home') %>/bin/hadoop-daemon.sh --config "<%= scope.lookupvar('hadoop::vars::home') %>/conf" stop tasktracker
  RETVAL=$?
  sleep 5
  echo
  [ $RETVAL -eq 0 ] && rm -f /var/lock/subsys/hadoop-tasktracker
}

restart() {
  stop
  start
}

condrestart(){
  [ -e /var/lock/subsys/hadoop-tasktracker ] && restart || :
}

case "$1" in
  start)
    start
    ;;
  stop)
    stop
    ;;
  restart)
    restart
    ;;
  condrestart|try-restart)
    condrestart
    ;;
  *)
    echo $"Usage: $0 {start|stop|restart|try-restart}"
    exit 1
esac

exit $RETVAL
